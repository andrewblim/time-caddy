!!! 5
%html
  %head
    %title time-caddy password reset
    = haml :'partials/bootstrap_header'
    %link{rel: 'stylesheet', href: '/stylesheets/basic.css'}
  %body
    = haml :'partials/navbar', locals: { user: @user, hide_login: true }

    .container-fluid
      = haml :'partials/flash'
      .col-md-4.col-md-offset-4
        %h2 Password reset request
        %p
          Enter your email address, and we will send you instructions on how to reset your password.
        %form{action: '/password_reset_request', method: 'post'}
          .form-group
            %label{for: 'email'} Username or Email
            %input#username_or_email.form-control{type: 'text', name: 'email'}
          .form-group
            %input#submit{type: 'submit', value: 'Request password reset'}
