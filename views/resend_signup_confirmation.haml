!!! 5
%html
  %head
    %title time-caddy resend signup confirmation
    = haml :_bootstrap_header
    %link{rel: 'stylesheet', href: '/stylesheets/basic.css'}
  %body
    = haml :_navbar, locals: { user: @user, hide_login: true }

    .container-fluid
      = haml :_flash
      .col-md-4.col-md-offset-4
        %h2 Resend signup confirmation
        %p
          Enter your email address, and we will send you a new signup confirmation email.
        %form{action: '/resend_signup_confirmation', method: 'post'}
          .form-group
            %label{for: 'email'} Email
            %input#username_or_email.form-control{type: 'text', name: 'email'}
          .form-group
            %input#submit{type: 'submit', value: 'Resend signup confirmation'}
