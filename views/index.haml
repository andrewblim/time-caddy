%html
  %head
    %title time-caddy
  %body
    - if logged_in?
      %p
        = "Hello, #{username}."
        %a{href: "/logout"} Log out. 
    - else
      %p
        Hello, anonymous.
        %a{href: "/login"} Log in
        if you already have an account.
        %a{href: "/signup"} Sign up
        if you don't.
