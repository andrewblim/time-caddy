!!! 5
%html
  %head
    %title time-caddy signup confirmation
    = haml :_bootstrap_header
    = haml :_jquery
    %link{rel: 'stylesheet', href: '/stylesheets/basic.css'}
  %body
    = haml :_navbar, locals: { user: @user, hide_login: true }
    .container-fluid
      = haml :_flash
      .col-md-4.col-md-offset-4
        %h2 Signup confirmation
        - if settings.email_enabled
          %p We have sent an email to you with a confirmation code. Please enter it below to activate your account.
          %form{action: '/signup_confirmation', method: 'post'}
            .form-group
              %input#username{type: 'hidden', name: 'signup_confirmation_url_token', value: @signup_confirmation_url_token}
            .form-group
              %label{for: 'signup_confirmation_token'} Confirmation code
              %input#activation_token.form-control{type: 'text', name: 'signup_confirmation_token'}
            .form-group
              %input#submit.btn.btn-default{type: 'submit', value: 'Confirm'}
        - else
          %p= "Please contact #{settings.support_email} to activate your account."
