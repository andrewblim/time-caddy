%html
  %head
    %title time-caddy signup
    = haml :_bootstrap_header
    %link{rel: 'stylesheet', href: '/stylesheets/basic.css'}
  %body
    = haml :_navbar, locals: { user: logged_in_user }
    .container-fluid
      - if flash[:signup]
        %p= flash[:signup]
      - if logged_in_user
        %p= "You are already logged in as #{logged_in_user.username}, though you may still create a new account below if you want."
      - else
        %p Sign up for a new account, or if you already have an account, log in with the form above.
      %form{action: '/signup', method: 'post'}
        .form-element
          %input#username{type: 'text', name: 'username', placeholder: 'Username'}
        .form-element
          %input#username{type: 'text', name: 'email', placeholder: 'Email'}
        .form-element
          %input#username{type: 'password', name: 'password', placeholder: 'Password'}
        .form-element
          %label{for: 'default_time_zone'} Default time zone:
        .form-element
          %input{type: 'submit', value: 'Signup'}
