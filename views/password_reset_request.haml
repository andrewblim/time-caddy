!!! 5
%html
  %head
    %title time-caddy reset password request
    = haml :_bootstrap_header
    %link{rel: 'stylesheet', href: '/stylesheets/basic.css'}
  %body
    = haml :_navbar, locals: { user: @user, hide_login: true }

    .container-fluid
      = haml :_flash
      .col-md-4.col-md-offset-4
        %p
          Enter your username or email address, and we will send you instructions on how to reset your password.
        %form{action: '/password_reset_request', method: 'post'}
          .form-group
            %label{for: 'username_or_email'} Username or Email
            %input#username_or_email.form-control{type: 'text', name: 'username_or_email'}
          .form-group
            %input#submit{type: 'submit', value: 'Request password reset'}
